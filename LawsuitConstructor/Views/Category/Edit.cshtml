@model MVC.Models.Category

@{
    ViewBag.Title = MVC.Translate.It("Change category");
}

<h2> @ViewBag.Title </h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @MVC.Translate.It("Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>
        <div class="editor-label">
            @MVC.Translate.It("Weight in list")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryWeight)
            @Html.ValidationMessageFor(model => model.CategoryWeight)
        </div>
        <ul>@MVC.Translate.It("Subcategories"):
            @if (Model.SubCategories.ToList().Count > 0)
            {
                foreach (MVC.Models.SubCategory subCategory in Model.SubCategories)
                {
                    <li>@subCategory.SubCategoryName</li>
                }
            }
            else
            {
                <li>@MVC.Translate.It("List is empty")</li>
            }
        </ul>
        <p>
            <input type="submit" value="@MVC.Translate.It("Change")" />
            <button name="button" onclick="submit" value="remove">@MVC.Translate.It("Remove")</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(MVC.Translate.It("To list"), "Index", "Category")
</div>
