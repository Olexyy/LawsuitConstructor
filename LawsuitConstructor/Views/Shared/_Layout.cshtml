<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")"></script>
        <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"></script>
        @RenderSection("Scripts", false)
    </head>
    <body>
        <div id="account">
            @Html.Partial("_LoginPartial")
        </div>
        <div id="menu">
            <ul>
                <li>@Html.ActionLink(MVC.Translate.It("Main"), "Index", "Home")</li>
                <li>@Html.ActionLink(MVC.Translate.It("Lawsuits"), "General", "Home")</li>
                <li>@Html.ActionLink(MVC.Translate.It("Advices"), "Advices", "Home")</li>
                <li>@Html.ActionLink(MVC.Translate.It("СourtFee"), "СourtFee", "Home")</li>
                @if(Request.IsAuthenticated){
                <li>@Html.ActionLink(MVC.Translate.It("Admin menu"), "Admin", "Admin")</li>
                }
            </ul>
        </div>
        <section id="main">
            @RenderBody()
        </section>
        <section id="footer">
            <h6>&copy;@DateTime.Now.Year</h6>  
        </section>
    </body>
</html>