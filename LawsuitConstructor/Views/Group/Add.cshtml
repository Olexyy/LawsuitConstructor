@model MVC.Models.Group

@{
    ViewBag.Title = MVC.Translate.It("New group");
}

<h2> @ViewBag.Title </h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @MVC.Translate.It("Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GroupName)
            @Html.ValidationMessageFor(model => model.GroupName)
        </div>
        <div class="editor-label">
            @MVC.Translate.It("Weight in list")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GroupWeight)
            @Html.ValidationMessageFor(model => model.GroupWeight)
        </div>
        <p>
            <input type="submit" value="@MVC.Translate.It("Add")" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(MVC.Translate.It("To list"), "Index", "Group")
</div>
