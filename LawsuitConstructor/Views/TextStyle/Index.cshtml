@model List<MVC.Models.TextStyle>
@{
    ViewBag.Title = MVC.Translate.It("Text styles");
    string message = (string)TempData["Message"];
}
<h2> @ViewBag.Title </h2>
<h4> @message </h4>
<div id="view-zone">
    <ul>
    @if(Model.Count == 0){
        <p> @MVC.Translate.It("List is empty") </p>
    }
    @foreach(var textStyle in Model){
        <li> @Html.ActionLink(@textStyle.TextStyleName, "Edit", "TextStyle", new { textStyleId = textStyle.TextStyleId }, null) </li>
    }
    </ul>
</div>
<p>
   @Html.ActionLink(MVC.Translate.It("New text style"), "Add", "TextStyle") <br />
   @Html.ActionLink(MVC.Translate.It("Administrative menu"), "Admin", "Admin")
</p>