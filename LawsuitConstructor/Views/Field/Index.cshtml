@model List<MVC.Models.Field>
@{
    ViewBag.Title = MVC.Translate.It("Fields");
    string message = (string)TempData["Message"];
}
<h2> @ViewBag.Title </h2>
<h4> @message </h4>
<div id="view-zone">
    <ul>
        @if(Model.Count == 0){
            <p> @MVC.Translate.It("List is empty") </p>
        }
        @foreach(var field in Model){
            <li> @Html.ActionLink(@field.FieldName, "Edit", "Field", new { fieldId = field.FieldId }, null) </li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink(MVC.Translate.It("New field"), "Add", "Field") <br />
    @Html.ActionLink(MVC.Translate.It("Administrative menu"), "Admin", "Admin")
</p>